@model Proyecto_Integrador.Models.modulos

@{
    ViewBag.Title = "Edit";
}
@*Título de la vista*@
<h2>Modificar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*Subitulo de la vista*@
        <h4>Administrador módulos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codigoProyectoFK)

        @Html.HiddenFor(model => model.nombrePK)

        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*Acá es para hacer que a fuerzas el usuario ingrese un valor *@
                @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control", placeholder = "descripción", required = "required" })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Botones de aceptar y cancelar *@
        <div class="form-actions no-color">
            <input type="submit" value="Aceptar" class="btn btn-success" /> |
            <a href="~/modulos/Index" role="button" class="btn btn-danger"> Cancelar</a>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
