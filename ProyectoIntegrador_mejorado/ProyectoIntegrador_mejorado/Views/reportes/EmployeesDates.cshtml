    </style>*@

<br />
<br />




@{
    if (TempData["empl"] != null)
    {


        <table class="table table-responsive-md">
            <tr>
                <th>
                    Cedula
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Primer Apellido
                </th>
                <th>
                    Segundo apellido
                </th>

            </tr>

            @foreach (var item in (TempData["empl"] as IEnumerable<ProyectoIntegrador_mejorado.Models.empleados>))
            {

                <tr>
                    <td>@item.cedulaPK</td>
                    <td>@item.nombre</td>
                    <td>@item.apellido1</td>
                    <td>@item.apellido2</td>

                </tr>

            }

        </table>

    }
}

