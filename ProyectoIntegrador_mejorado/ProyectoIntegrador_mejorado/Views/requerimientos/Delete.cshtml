@model ProyectoIntegrador_mejorado.Models.requerimientos

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>Administrador de requerimientos</h3>
<div>
    @*Mensaje de confimacion para el usuario*@
    <div class="p-3 mb-2 bg-danger text-white">¿Está seguro que desea eliminar este módulo?</div>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>

            <td>
                @Html.DisplayFor(model => model.descripcion)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.complejidad)
            </th>

            <td>
                @Html.DisplayFor(model => model.complejidad)
            </td>

        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>

            <td>
                @Html.DisplayFor(model => model.estado)
            </td>

        </tr>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaInicio)
            </th>

            <td>
                @Html.DisplayFor(model => model.fechaInicio)
            </td>

        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaFin)
            </th>

            <td>
                @Html.DisplayFor(model => model.fechaFin)
            </td>

        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.duraciónEstimada)
            </th>

            <td>
                @Html.DisplayFor(model => model.duraciónEstimada)
            </td>

        </tr>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.duraciónReal)
            </th>

            <td>
                @Html.DisplayFor(model => model.duraciónReal)
            </td>

        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.nombre)
            </td>

        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.empleados.nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.empleados.nombre)
            </td>

        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.modulos.nombre)
            </th>

            <td>
                @Html.DisplayFor(model => model.modulos.nombre)
            </td>

        </tr>

    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*Botones de aceptar y regresar(cancelar) *@
        <div class="form-actions no-color">
            <input type="submit" value="Aceptar" class="btn btn-success" /> &nbsp;
            <a href="~/requerimientos/Index" role="button" class="btn btn-danger"> Cancelar</a>
        </div>
    }
</div>
