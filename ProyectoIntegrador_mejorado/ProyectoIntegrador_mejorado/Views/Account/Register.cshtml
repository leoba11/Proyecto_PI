@model ProyectoIntegrador_mejorado.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

@*Titulo*@
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @* <h4>Cree una cuenta nueva.</h4>*@
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @*Campo para ingresar username con formato de Correo electronico*@
    <div class="form-group required">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    @*Campo para ingresar un password para el username ingresado anteriormente*@
    <div class="form-group required">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    @*Campo para confirmar el password ingresado arriba*@
    <div class="form-group required">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    @*Bontone Registrarse-Cancelar*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Registrarse" /> &nbsp;
            <a href="~/Account/Login" role="button" class="btn btn-danger"> Cancelar</a>
        </div>
    </div>

    @*Campos obligatorios*@
    <label class="control-label col-md-4"><span style="color:red">*</span> Llenar obligatoriamente </label>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
